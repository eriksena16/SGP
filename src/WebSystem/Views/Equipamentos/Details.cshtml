@model SGP.Models.Equipamento

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Equipamentos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClassificacaoID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classificacao.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotaFiscal)
        </dt>
        <dd class="col-sm-10">
            <a class="btn btn-outline-primary" href="@Model.NotaFiscalUrl" target="_blank">Visualizar</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorDeCompra)
        </dt>
        <dd class="col-sm-10">
            @{ 

                var valorCompra = Model.ValorDeCompra;
                string specifier;
                System.Globalization.CultureInfo culture;
                specifier = "C2";
                culture = System.Globalization.CultureInfo.CreateSpecificCulture("pt-BR");

            }
            @Html.Raw(valorCompra.ToString(specifier, culture))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorAtual)
        </dt>
        <dd class="col-sm-10">
            @{
                var valorAtual = Model.ValorAtual;
                

            }
           @Html.Raw(valorAtual.ToString(specifier, culture))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeCompra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDeCompra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModeloID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MarcaID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marca.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Serie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Serie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResponsavelID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Responsavel.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SetorID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Setor.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoDeConservacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoDeConservacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EquipamentoID">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.EquipamentoID">Delete</a> |
    <a asp-action="Index">Voltar para Lista</a>
</div>
