@model SGP.Model.Entity.ViewModels.EquipamentoViewModel
@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Equipamentos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaDoItemId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaDoItemNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClassificacaoDeAtivosId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassificacaoDeAtivosNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotaFiscal)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.NotaFiscalUrl" target="_blank">Visualizar</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorDeCompra)
        </dt>
        <dd class="col-sm-10">
            @{

                var valorCompra = Model.ValorDeCompra;
                string specifier;
                System.Globalization.CultureInfo culture;
                specifier = "C2";
                culture = System.Globalization.CultureInfo.CreateSpecificCulture("pt-BR");

            }
            @Html.Raw(valorCompra.ToString(specifier, culture))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorAtual.HasValue ? model.ValorAtual.Value : 0M)
        </dt>
        <dd class="col-sm-10">
            @{
                var valorAtual = Model.ValorAtual.HasValue ? Model.ValorAtual.Value : 0M;

            }
            @Html.Raw(valorAtual.ToString(specifier, culture))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeCompra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDeCompra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModeloDeEquipamentoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModeloDeEquipamentoNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModeloDeEquipamentoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModeloDeEquipamentoNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroDeSerie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroDeSerie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResponsavelDoEquipamentoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResponsavelDoEquipamentoNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SetorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SetorNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Conservacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Conservacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a asp-action="Index">Voltar para Lista</a>
</div>
