@model SGP.Models.Equipamentos.Equipamento

@{
    Layout = "_LayoutPrincipal";
    ViewData["Title"] = "Create";
}

<h1 class="mt-4">Equipamentos</h1>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="Index">Voltar</a></li>
    <li class="breadcrumb-item active">Adicionar novo Equipamento</li>
</ol>
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Patromonio</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="EquipamentoID" class="control-label"></label>
                                <input asp-for="EquipamentoID" class="form-control" />
                                <span asp-validation-for="EquipamentoID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Modelo" class="control-label"></label>
                                <input asp-for="Modelo" class="form-control" />
                                <span asp-validation-for="Modelo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SetorID" class="control-label"></label>
                                @Html.DropDownList("SetorID", (IEnumerable<SelectListItem>)ViewBag.SetorID, new { @class = "form-control" })
                                <span asp-validation-for="SetorID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">

                                
                            </div>
                            <div class="form-group">
                                <label asp-for="Serie" class="control-label"></label>
                                <input asp-for="Serie" class="form-control" />
                                <span asp-validation-for="Serie" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <input asp-for="Status" class="form-control" />
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ClassificacaoID" class="control-label"></label>
                                @Html.DropDownList("ClassificacaoID", (IEnumerable<SelectListItem>)ViewBag.ClassificacaoID, new { @class = "form-control" })
                                <span asp-validation-for="ClassificacaoID" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FornecedorID" class="control-label"></label>
                                @Html.DropDownList("FornecedorID", (IEnumerable<SelectListItem>)ViewBag.FornecedorID, new { @class = "form-control" })
                                <span asp-validation-for="FornecedorID" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="ResponsavelID" class="control-label"></label>
                                @Html.DropDownList("ResponsavelID", (IEnumerable<SelectListItem>)ViewBag.ResponsavelID, new { @class = "form-control" })
                                <span asp-validation-for="ResponsavelID" class="text-danger"></span>
                            </div>
                            
                        </div>

                    </div>
                </div>
                <div class="card-footer">
                    Info
                </div>
            </div>
            <hr />
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Contábil</h3>
                </div>
                <div class="card-body">
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DataDeCompra" class="control-label"></label>
                                <input asp-for="DataDeCompra" class="form-control" />
                                <span asp-validation-for="DataDeCompra" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ValorDeCompra" class="control-label"></label>

                                <input asp-for="ValorDeCompra" class="form-control" />
                                <span asp-validation-for="ValorDeCompra" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">

                            <div class="form-group">
                                <label asp-for="Nota" class="control-label"></label>
                                <input asp-for="Nota" class="form-control" />
                                <span asp-validation-for="Nota" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="EstadoDeConservacao" class="control-label"></label>
                                <input asp-for="EstadoDeConservacao" class="form-control" />
                                <span asp-validation-for="EstadoDeConservacao" class="text-danger"></span>
                            </div>
                        </div>
                        <hr />
                        <div class="col-md-12 ">
                            <div class="mb-3">
                                <label asp-for="Observacao" class="control-label"></label>
                                <textarea asp-for="Observacao" class="form-control"></textarea>
                                <span asp-validation-for="Observacao" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="card-footer">
                    Info
                </div>
            </div>
            <hr /> 
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
